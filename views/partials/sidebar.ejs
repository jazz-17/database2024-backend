<script>
  function toggleSubOptions(id) {
    let subOptions = document.getElementById(id);
    // Toggle display of sub-options
    if (subOptions.classList.contains("hidden")) {
      subOptions.classList.remove("hidden");
      subOptions.classList.add("block");
    } else {
      subOptions.classList.remove("block");
      subOptions.classList.add("hidden");
    }
  }
</script>

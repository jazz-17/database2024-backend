<!DOCTYPE html>
<html lang="en">
  <%- include ('../../partials/head') %>
  <body class="flex">
    <%- include ('../../partials/sidebar') %>
    <main
      class="flex flex-grow flex-col gap-4 bg-gray-100 p-8 text-xl font-semibold"
    >
      <h1 class="text-2xl">Empleados</h1>
      <div class="bg-white rounded-md shadow-sm p-4">
        <table
          class="mt-3 min-h-[150px] w-full text-nowrap text-left text-sm text-gray-500"
        >
          <thead class="bg-gray-100 text-sm uppercase text-gray-600">
            <tr>
              <th class="px-4 py-3">Descripción</th>
              <th class="px-4 py-3">Dirección</th>
              <th class="px-4 py-3">Celular</th>
              <th class="px-4 py-3">Hobby</th>
            </tr>
          </thead>
          <tbody>
            <% for(let empleado of empleados) {%>
            <tr class="border-b bg-white hover:bg-gray-100">
              <% for(let cell of empleado) { %>

              <td class="px-4 py-3"><%= cell %></td>
              <% } %>
              <!-- <td>
              <a
                href="/maestros/empleados/editar/<%= empleado[0] %>"
                class="text-blue-500"
                >Editar</a
              >
              <a
                href="/maestros/empleados/eliminar/<%= empleado[0] %>"
                class="text-red-500"
                >Eliminar</a
              >
            </td> -->
              <% } %>
            </tr>
          </tbody>
        </table>
        <div class="overflow-x-auto"></div>
      </div>
    </main>
  </body>
</html>
